<!DOCTYPE html>
<html>
  <head>
    <title>Linker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Linkly</h1>
    <% if user_signed_in? %>
      <p>Current logged in as: <%= current_user.email %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
