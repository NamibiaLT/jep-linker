<%= form_for @link do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being shortened:</h2>
      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :long_url, "Long URL" %>
  <%= f.text_field :long_url  %>
  <%= f.label :short_url, "Unique Short URL" %>
  <%= f.text_field :short_url %>
  <%= f.submit "Shorten" %>
<% end %>
