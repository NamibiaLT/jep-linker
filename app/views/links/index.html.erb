<%= form_for(@link) do |f| %>
  <%= f.label :long_url, "Long URL" %>
  <%= f.text_field :long_url  %>
  <%= f.submit "Shorten" %>
<% end %>
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<% if @shortened_link %>
  Short link successfully created <%= link_to @shortened_link.short_url, @shortened_link.long_url %>
<% end %> 





